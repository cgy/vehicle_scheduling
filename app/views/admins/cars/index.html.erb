<% provide(:title, '车辆管理') %>

<div class="content span9">
  <h4>车辆管理 </h4>

  <div class="row">
    <div class="span9">
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <table id="cars" class="table table-bordered" cellpadding="0" cellspacing="0"
             border="0" data-source="<%= admins_cars_url(format: "json") %>">
        <thead>
        <tr class="alert alert-success">
          <th>车型</th>
          <th>车牌</th>
          <th>限载人数</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
    <div class="left-form span3">
      <div class="row">
        <div class="span1">
          <p><%= link_to "新增", new_admins_car_path, class: "btn add-btn", id: "new_admins_car", remote: true %></p>

          <p><%= link_to "修改", new_admins_car_path, class: "btn edit-btn", id: "new_admins_car", remote: true %></p>

          <p><%= link_to "删除", new_admins_car_path, class: "btn remove-btn", id: "new_admins_car", remote: true %></p>
        </div>
        <div class="span2 form-wapper">
          <%= form_for @car, :as => :car, :url => admins_cars_path, :method => :post,
                       :html => {:class => "well-form"} do |f| %>
              <%= render 'shared/error_messages' , object: f.object %>
              <label class="control-label" for="inputModel">车型</label>
              <input class="input-medium" type="text" id="inputModel" name="model">
              <label class="control-label" for="inputPlate">车牌</label>
              <input class="input-medium" type="text" id="inputPlate" name="plate">
              <label class="control-label" for="inputLoad">限载人数</label>
              <input class="input-medium" type="text" id="inputLoad" name="load">

              <div class="control-group">
                <div class="controls">
                  <%= f.submit "确定", class: "btn" %>
                  <%= link_to "取消", "#", class: "btn cancle" %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
