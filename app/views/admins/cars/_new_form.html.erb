<%= form_for @car, :as => :car, :url => admins_cars_path, :method => :post, :remote => true, :validate => true,
             :html => {:class => "well-form"} do |f| %>
    <%= f.label :model, "车型", :class=>"control-label" %>
    <%= f.text_field :model, :class=>"input-medium" %>
    <%= f.label :plate, "车牌", :class=>"control-label" %>
    <%= f.text_field :plate, :class=>"input-medium" %>
    <%= f.label :load, "限载人数", :class=>"control-label" %>
    <%= f.text_field :load, :class=>"input-medium" %>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定", class: "btn"%>
        <%= link_to "取消", "#", class: "btn cancle" %>
      </div>
    </div>
<% end %>