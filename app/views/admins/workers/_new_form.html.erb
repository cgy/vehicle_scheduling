<%= form_for @worker, :as => :worker, :url => admins_workers_path, :method => :post, :remote => true, :validate => true,
             :html => {:class => "well-form"} do |f| %>
    <%= f.label :name, "姓名", :class=>"control-label" %>
    <%= f.text_field :name, :class=>"input-medium" %>
    <%= f.label :group, "工作班组", :class=>"control-label" %>
    <%= f.text_field :group, :class=>"input-medium" %>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定", class: "btn"%>
        <%= link_to "取消", "#", class: "btn cancle" %>
      </div>
    </div>
<% end %>