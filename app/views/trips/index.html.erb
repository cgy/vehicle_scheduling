<h1>Listing trips</h1>

<table>
  <tr>
    <th>Car</th>
    <th>User</th>
    <th>Destination</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.car_id %></td>
    <td><%= trip.user_id %></td>
    <td><%= trip.destination_id %></td>
    <td><%= trip.start %></td>
    <td><%= trip.end %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

