<% provide(:title, '') %>

<div class="center container">
  <h2>
    车辆使用情况
  </h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>车型</th>
        <th>车牌</th>
        <th>司机</th>
        <th>出差地</th>
        <th>出发时间</th>
        <th>预计归来时间</th>
        <th>事由</th>
      </tr>
    </thead>
    <% @car_status.each do |c| %>
      <% if c[:available] %>
        <tr class="alert alert-success">
      <% else %>
        <tr class="alert alert-error">
      <% end %>
        <td><%= c[:model] %></td>
        <td><%= c[:plate] %></td>
        <td><%= c[:driver] %></td>
        <td><%= c[:destination] %></td>
        <td><%= c[:departure_time] %></td>
        <td><%= c[:back_time] %></td>
        <td><%= c[:note] %></td>
      </tr>
    <% end %>
  </table>
</div>

