<% provide(:title, '首页') %>

<table class="table table-hover">
  <caption>可用车辆情况</caption>
  <thead>
  <tr>
    <th></th>
    <th>车型</th>
    <th>车牌</th>
    <th>限载人数</th>
    <th>司机</th>
  </tr>
  </thead>
  <tbody>
  <% @available_cars.each_with_index do |c, i| %>
      <tr class="alert alert-success">
        <td><%= i+1 %></td>
        <td><%= c[:car].model %></td>
        <td><%= link_to c[:car].plate, c[:car] %></td>
        <td><%= c[:car].limit %></td>
        <% if !c[:driver].nil? %>
            <td><%= c[:driver].name %>(<%= c[:driver].phone %>)</td>
        <% else %>
            <td></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<table class="table table-hover">
  <caption>在用车辆情况</caption>
  <thead>
  <tr>
    <th></th>
    <th>车型</th>
    <th>车牌</th>
    <th>司机</th>
    <th>工作人员</th>
    <th>出差地</th>
    <th>出发时间</th>
    <th>预计归来时间</th>
    <th>事由</th>
  </tr>
  </thead>
  <tbody>
  <% @cars_in_use.each_with_index do |c, i| %>
      <tr class="alert alert-error">
        <td><%= i+1 %></td>
        <td><%= c[:car].model %></td>
        <td><%= link_to c[:car].plate, c[:car] %></td>
        <td><%= c[:driver].name %></td>
        <td><%= c[:workerslist] %></td>
        <td><%= c[:destination] %></td>
        <td><%= c[:departure_time] %></td>
        <td><%= c[:back_time] %></td>
        <td><%= c[:note] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

